@model IEnumerable<BusRouteViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
        <table class="table table-striped mt-5 mb-5">
            <thead>
            <th>bus no.</th>
            <th>bus name </th>
            <th>route details</th>
            </th>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BusNo</td>
                        <td>@item.BusName</td>
                        <td><a asp-controller="home" asp-action="routedetailview" asp-route-id=@item.routeId>@item.RouteName</a></td>
                    </tr>
                }
            </tbody>
        </table>
</div>

<div><h1 style="color:#303133;">BUS DETAILS</h1></div>

<a class="btn btn-info" asp-action="Create" asp-controller="Home">Create</a>
<button onclick="ShowAllReservation()" class="btn btn-primary">GetAll</button>

<div class="row" style="float:right">
    <input type="text" id="Id" placeholder="Enter the Bus Id" />
    <button class="btn btn-success" id="GetButton" onclick="GetReservation()">ViewDetails</button>
</div>

<br />
<table class="table table-striped mt-5" id="apiTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Bus No.</th>
            <th>Bus Name </th>
            <th>Route details</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<br />
<table id="apiTablesById" class="table table-striped mt-5">
    <thead>
        <tr>
            <th>ID</th>
            <th>Bus No.</th>
            <th>Bus Name </th>
            <th>Route details</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script type="text/javascript">
    //$(document).ready(function () {
    //    ShowAllReservation();
    //    GetReservation();

    //});
    function ShowAllReservation() {
        var xhttp = new XMLHttpRequest();
        xhttp.open("GET", "https://localhost:44392/api/busdetailsapi", true);
        xhttp.send();

        xhttp.onreadystatechange = function () {
            var tbody = document.getElementById("apiTable").querySelector("tbody");
            tbody.innerHTML = "";
            if (this.readyState == 4 && this.status == 200) {
                JSON.parse(this.responseText).forEach(function (data) {
                    tbody.innerHTML += "<tr><td>" + data.id + "</td>" + "<td>" + data.busNo + "</td>" + "<td>" + data.busName + "</td>" + "<td>" + data.routeId + "</td></tr>";
                });
            }
        };
    }
    function GetReservation() {
        var xhttp = new XMLHttpRequest();
        xhttp.open("GET", "https://localhost:44392/api/busdetailsapi/" + document.getElementById("Id").value, true);
        xhttp.send();

        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var response = JSON.parse(this.responseText);
                var tbody = document.getElementById("apiTablesById").querySelector("tbody");
                tbody.innerHTML = "<tr><td>" + response.id + "</td><td>" + response.busNo + "</td><td>" + response.busName + "</td><td>" + response.routeId + "</td></tr>";
            }
        };
    }
</script>