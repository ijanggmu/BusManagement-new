@model IEnumerable<BusRouteViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row table-responsive">
    <table class="table table-hover mt-5 mb-5 text-center">
        <thead>
            <tr>
                <th>Bus No.</th>
                <th>Bus Name </th>
                <th>Route </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BusNo</td>
                    <td>@item.BusName</td>
                    <td><a asp-controller="home" asp-action="routedetailview" asp-route-id=@item.routeId>@item.RouteName</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div><h1 style="color:#303133;">DETAILS FROM API</h1></div>

<a class="btn btn-light" asp-action="Create" asp-controller="Home">Create</a>
<button class="btn btn-light">GetAll</button>

<div>
    <partial name="_IndexFromAPI"/>
</div>



<div class="ViewDetailButton" style="margin-bottom:30px;float:right;">
    <input type="text" id="Id" placeholder="Enter the Bus Id"
           style="
                height:38px;
                border:none;
                border-bottom:1px solid #aaa;
                text-align:center;
                margin:-1px" />
    <button class="btn btn-outline-success" id="GetButton" onclick="GetReservation()">ViewDetails</button>
</div>

