<table id="apiTablesById" class="table table-striped mb-5">
    <thead>
        <tr>
            <th>ID</th>
            <th>Bus No.</th>
            <th>Bus Name </th>
            <th>Route details</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script type="text/javascript">
    ShowAllReservation();
    function ShowAllReservation() {
        var xhttp = new XMLHttpRequest();
        xhttp.open("GET", "https://localhost:44392/api/busdetailsapi", true);
        xhttp.send();

        xhttp.onreadystatechange = function () {
            var tbody = document.getElementById("apiTable").querySelector("tbody");
            tbody.innerHTML = "";
            if (this.readyState == 4 && this.status == 200) {
                JSON.parse(this.responseText).forEach(function (data) {
                    tbody.innerHTML += "<tr><td>" + data.id + "</td>" +
                        "<td>" + data.busNo + "</td>" +
                        "<td>" + data.busName + "</td>" +
                        "<td>" + data.routeId + "</td></tr>";
                });
            }
        };
    }
    function GetReservation() {
        var xhttp = new XMLHttpRequest();
        xhttp.open("GET", "https://localhost:44392/api/busdetailsapi/" + document.getElementById("Id").value, true);
        xhttp.send();

        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var response = JSON.parse(this.responseText);
                var tbody = document.getElementById("apiTablesById").querySelector("tbody");
                tbody.innerHTML = "<tr><td>" + response.id + "</td><td>" + response.busNo + "</td><td>" + response.busName + "</td><td>" + response.routeId + "</td></tr>";
            }
        };
    }
</script>