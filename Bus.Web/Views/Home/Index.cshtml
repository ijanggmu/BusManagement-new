@model IEnumerable<BusRouteViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row table-responsive">
    <table class="table table-hover mt-5 mb-5 text-center">
        <thead>
            <tr>
                <th>Bus No.</th>
                <th>Bus Name </th>
                <th>Route </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BusNo</td>
                    <td>@item.BusName</td>
                    <td><a asp-controller="home" asp-action="routedetailview" asp-route-id=@item.routeId>@item.RouteName</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div><h1 style="color:#303133;">BUS DETAILS</h1></div>

<a class="btn btn-light" asp-action="Create" asp-controller="Home">Create</a>
<button onclick="ShowAllReservation()" class="btn btn-light">GetAll</button>

<table class="table table-striped mt-2" id="apiTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Bus No.</th>
            <th>Bus Name </th>
            <th>Route details</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<br />

<div class="ViewDetailButton" style="margin:70px 0 30px 0;float:right;">
    <input type="text" id="Id" placeholder="Enter the Bus Id" 
           style="
    
                height:38px;
                border:none;
                border-bottom:1px solid #aaa;
                text-align:center;
                margin:-1px" />
    <button class="btn btn-success" id="GetButton" onclick="GetReservation()">ViewDetails</button>
</div>

<table id="apiTablesById" class="table table-striped mb-5">
    <thead>
        <tr>
            <th>ID</th>
            <th>Bus No.</th>
            <th>Bus Name </th>
            <th>Route details</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script type="text/javascript">
    //$(document).ready(function () {
    //    ShowAllReservation();
    //    GetReservation();

    //});
    function ShowAllReservation() {
        var xhttp = new XMLHttpRequest();
        xhttp.open("GET", "https://localhost:44392/api/busdetailsapi", true);
        xhttp.send();

        xhttp.onreadystatechange = function () {
            var tbody = document.getElementById("apiTable").querySelector("tbody");
            tbody.innerHTML = "";
            if (this.readyState == 4 && this.status == 200) {
                JSON.parse(this.responseText).forEach(function (data) {
                    tbody.innerHTML += "<tr><td>" + data.id + "</td>" +
                        "<td>" + data.busNo + "</td>" +
                        "<td>" + data.busName + "</td>" +
                        "<td>" + data.routeId + "</td></tr>";
                });
            }
        };
    }
    function GetReservation() {
        var xhttp = new XMLHttpRequest();
        xhttp.open("GET", "https://localhost:44392/api/busdetailsapi/" + document.getElementById("Id").value, true);
        xhttp.send();

        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var response = JSON.parse(this.responseText);
                var tbody = document.getElementById("apiTablesById").querySelector("tbody");
                tbody.innerHTML = "<tr><td>" + response.id + "</td><td>" + response.busNo + "</td><td>" + response.busName + "</td><td>" + response.routeId + "</td></tr>";
            }
        };
    }
</script>