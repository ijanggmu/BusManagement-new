@model IEnumerable<Bus.Web.Models.RouteViewModel>

<br />
    <p>
        <a class="btn btn-outline-success" asp-action="Create" asp-controller="Route">Create New Route</a>
    </p>
    <div class="container table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Route ID
                    </th>
                    <th>
                        Route Name
                    </th>
                    <th>
                        Number Of Stops
                    </th>
                    <th>
                        Bus Permit Limit
                    </th>
                    <th>
                        Permited Bus
                    </th>
                    <th>
                        Remaing Bus Permit
                    </th>
                    <th>
                        Route Map
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RouteName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfStops)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BusCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PermitedBus)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.RemainingBusPermit)
                    </td>
                    <td><a href="@item.RouteMapLink">
                            Map                    
                        </a>
                    
                    </td>                
                    <td>
                        <a asp-controller="Route" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="Route" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller="Route" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>